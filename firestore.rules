rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /states/{stateId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.master_admin == true
    }
    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.master_admin == true || request.auth.token.roles[companyId] == 'admin');
    }
    match /companies/{companyId}/statuses/{statusId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.master_admin == true || request.auth.token.roles[companyId] == 'admin');
    }
    match /companies/{companyId}/cargoes/{cargoId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.master_admin == true || request.auth.token.roles[companyId] == 'admin' || request.auth.token.roles[companyId] == 'operator');
    }
  }
}